{
    "manifest_version": 3,
    "name": "Compress PDF Extraction",
    "version": "1.0",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "./background-worker.js"
    },
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "./gs-worker.js",
                "./gs-worker.wasm"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}